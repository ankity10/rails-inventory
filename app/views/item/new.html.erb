                <div class="form-group">
                    <br>
                    <h4 style="text-align: left;">Item Name :</h4>
                    <input required autocomplete="off" type="text" class="form-control" id="item_ItemName" name="item[ItemName]" placeholder="item_name">
                </div>

                <div class="form-group">
                    <h4 style="text-align: left;">Price :</h4>
                      <input required autocomplete="off" type="number" class="form-control" id="item_Price" name="item[Price]">         
                    
                </div>  

                <div class="form-group">
                    <h4 style="text-align: left;">Stock :</h4>
