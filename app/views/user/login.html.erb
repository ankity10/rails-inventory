</nav>

<div class="container-fluid">
    <%= form_for(:user,:url=>{:action => 'login_check'})  do |i|%>
        <div class="info text-center">
            <h1 class="text-center" style="color: #000;margin-top: 90px;">Inventory Login</h1>
        </div>
        <br>
        <br>
        <div class="row" id="form1">
            <div class="col-md-4"></div>
            <div class="col-xs-12 col-md-4 text-left" id="form" style="border: 1px solid black;">
                <div class="form-group">
                    <h4 style="text-align: left;">Email ID :</h4>
                	<input required autocomplete="off" type="text" class="form-control" id="user_email" placeholder="Email Id" name="user[email]">
                </div>
                <div class="form-group">
                    <h4 style="text-align: left;">Password :</h4>
					<input required autocomplete="off" type="password" class="form-control" id="user_password" placeholder="Password" name="user[password]"></div>
                    
                <br>
                <center>
                <button type="submit" class="btn btn-default text-center" name="commit" value="Login">Login	
                </button>
                </center> 
                
                <br>
                <br>
            </div>
        </div>
    <% end %>
</div>


</body>
</html>